pipeline{
	agent{
		docker{
			dockerFile true
		}
	}
	stages{
		stage("maven version check"){
			steps{
				sh "mvn --version"
			}
		}
		stage('Build') {
            steps {
                sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
	}
	post {
		always{
			echo "Build execution completed"
		}
		success {
			echo "Build passed successfully"
			archieveArtifacts artifacts:/target/.*.jar
		}
		failure{
			echo "Exucution failed!!"
		}
	}
}